{
  "manifest_version": 3,
  "name": "notify",
  "version": "1.0",
  "permissions": ["storage", "sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "Open Notify",
    "default_icon": "notify.png"
  },
  "icons": {
    "128": "notify.png"
  }
}
